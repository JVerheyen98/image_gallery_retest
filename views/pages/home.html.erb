<simple starting login page.>

<h1>Welcome to the Image Gallery Revamped</h1>

<% if user_signed_in? %>
  <p>Hello, <%= current_user.email %>!</p>
  <%= link_to "My Galleries", galleries_path, class: "btn" %> |
  <%= link_to "View All Galleries", galleries_path, class: "btn" %> |
  <%= link_to "Create a New Gallery", new_gallery_path, class: "btn" %> |
  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn" %>
<% else %>
  <%= link_to "Sign Up", new_user_registration_path, class: "btn" %> |
  <%= link_to "Log In", new_user_session_path, class: "btn" %>
<% end %>

